{
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "plugins": [
        "react-hooks"
    ],
    "env": {
        "browser": true,
        "node": true,
        "jasmine": true,
        "es6": true
    },
    "parser": "@babel/eslint-parser",
    "parserOptions": { //解析器选项
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "off"
        ],
        "no-undef": "warn",
        "no-unused-vars": "warn",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "react/display-name": "off",
        "react/prop-types": 0, //防止在react组件定义中缺少props验证
        "eqeqeq": [
            "error",
            "always"
        ]
    }
}